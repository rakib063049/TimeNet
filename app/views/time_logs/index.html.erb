<div class="row">
  <div class="col-lg-12">
    <h1>Time Logs</h1>

    <div class="table-responsive">
      <table class="table table-bordered table-hover ">
        <thead>
        <tr>
          <th>Start at</th>
          <th>End at</th>
          <th>Idle Time</th>
          <th>Logged</th>
          <th>User</th>
          <th>Project</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @time_logs.each do |time_log| %>
            <tr>
              <td><%= formated_datetime(time_log.start_at) %></td>
              <td><%= formated_datetime(time_log.end_at) %></td>
              <td><%= time_log.idle_time_str %></td>
              <td><%= time_log.time_logged_str %></td>
              <td><%= time_log.user.name %></td>
              <td><%= time_log.project.name %></td>
              <td><%= link_to 'Destroy', time_log, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Time log', new_time_log_path %>
  </div>
</div><!-- /.row -->
