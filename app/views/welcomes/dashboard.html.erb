<div class="row">
  <div class="col-md-6">
    <h4>
      <small>Welcome back,</small> <%= current_user.name %></h4>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
      <h4>
        <small>Last logged in on:</small> <%= formated_datetime(current_user.last_sign_in_at) %>
      </h4>
      <% if current_user.password_change_required? %>
          <small style="color: red; font-size: 13px;">
            You did not yet update your password, <br>Please Update your profile or password!
          </small>
      <% end %>
    </div>
  </div>

  <div class="col-lg-12">
    <h2>Current Projects:</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover ">
        <thead>
        <tr>
          <th>Project#</th>
          <th>Project name</th>
          <th>Customer</th>
          <th>Contact</th>
          <th>Total Logs</th>
          <th>Active Logs Tracked</th>
          <th>Download Logs</th>
        </tr>
        </thead>
        <tbody>
        <% @projects.each do |project| %>
            <tr>
              <td><%= project.number %></td>
              <td><%= link_to project.name, edit_project_path(project) %></td>
              <td><%= link_to project.customer.business_name, edit_customer_path(project.customer) %></td>
              <td><%= link_to_contact(project.contacts) %></td>
              <td><%= total_time_logged_str(project.time_logged) %></td>
              <td><%= total_time_logged_str(project.active_time_logged) %></td>
              <td><%= link_to "Download Log", time_logs_path(:format => "csv", :project_ids => project) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="pull-right">
      <%= link_to "Download all Logs", time_logs_path(:format => "csv", :project_ids => @projects.collect(&:id)), :class => "btn btn-primary btn-sm" %>
    </div>
  </div>
</div><!-- /.row -->
